<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg4"
    tools:context=".DownloadActivity">

    <Button
        android:id="@+id/sass_btn"
        android:layout_width="270dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#ADDB35FF"
        android:text="SASS"
        android:textSize="24sp"
        app:cornerRadius="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/css_btn"
        app:strokeColor="#2D50A6"
        app:strokeWidth="3dp" />

    <Button
        android:id="@+id/bootstrap_btn"
        android:layout_width="270dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#8BC34A"
        android:text="Bootstrap"
        android:textSize="24sp"
        app:cornerRadius="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sass_btn"
        app:strokeColor="#2D50A6"
        app:strokeWidth="3dp" />

    <Button
        android:id="@+id/bulma_btn"
        android:layout_width="270dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#009688"
        android:text="Bulma"
        android:textSize="24sp"
        app:cornerRadius="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bootstrap_btn"
        app:strokeColor="#2D50A6"
        app:strokeWidth="3dp" />

    <Button
        android:id="@+id/css_btn"
        android:layout_width="270dp"
        android:layout_height="100dp"
        android:backgroundTint="#00BCD4"
        android:text="CSS"
        android:textSize="24sp"
        app:cornerRadius="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.057"
        app:strokeColor="#2D50A6"
        app:strokeWidth="3dp" />

    <Switch
        android:id="@+id/switch1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="41dp"
        android:text="Switch"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bulma_btn" />

</androidx.constraintlayout.widget.ConstraintLayout>