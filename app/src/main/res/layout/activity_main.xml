<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_list"
    tools:context=".MainActivity"

    >

    <Button
        android:id="@+id/btnConvert"
        android:layout_width="170dp"
        android:layout_height="190dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="35dp"
        android:backgroundTint="#876B19"
        android:text="Converter"
        android:textSize="21sp"
        app:cornerRadius="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="#FF9800"
        app:strokeWidth="4dp" />

    <Button
        android:id="@+id/palette_btn"
        android:layout_width="170dp"
        android:layout_height="190dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="#1F7495"
        android:text="Palette"
        android:textSize="21sp"
        app:cornerRadius="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="#2D50A6"
        app:strokeWidth="4dp" />

    <Button
        android:id="@+id/camera_btn"
        android:layout_width="170dp"
        android:layout_height="190dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="190dp"
        android:backgroundTint="#FA162E17"
        android:text="Camera"
        android:textSize="21sp"
        app:cornerRadius="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnConvert"
        app:strokeColor="#4CAF50"
        app:strokeWidth="4dp" />

    <Button
        android:id="@+id/download_btn"
        android:layout_width="170dp"
        android:layout_height="190dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="190dp"
        android:backgroundTint="#7C4949"
        android:text="Download"
        android:textSize="21sp"
        app:cornerRadius="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/palette_btn"
        app:strokeColor="#F44336"
        app:strokeWidth="4dp" />

    <Button
        android:id="@+id/color_picker_btn"
        android:layout_width="350dp"
        android:layout_height="150dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="#9322BC"
        android:text="Color Picker"
        android:textSize="21sp"
        app:cornerRadius="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/download_btn"
        app:strokeColor="#FF2CFF"
        app:strokeWidth="4dp" />

</androidx.constraintlayout.widget.ConstraintLayout>